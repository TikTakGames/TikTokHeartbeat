{ 
    "manifest_version": 2,
    "name": "TiktakGamesAgent",
    "version": "1.0",
    "description": "TiktakGames Heartbeat Agent",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
 
    "content_security_policy": "script-src 'self'; object-src 'self'",
 
    "permissions": [ "notifications", 
    "unlimited_storage", 
    "tabs", 
    "management", 
    "webNavigation", 
    "webRequest", "webRequestBlocking",
    "activeTab",
    "scripting",
    "<all_urls>" ],
"optional_permissions" : [ "contentSettings", "storage" ],
 
    "background": { 
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [{
        "js": ["foreground.js"],
        "css": ["foreground.css"],
        "matches": ["https://www.tiktok.com/*"],
        "run_at": "document_end" ,
        "all_frames": true
    }],
    "web_accessible_resources" : ["/web_accessible_resources.js"]
}
